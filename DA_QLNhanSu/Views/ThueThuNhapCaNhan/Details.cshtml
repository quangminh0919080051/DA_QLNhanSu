@model DA_QLNhanSu.Models.TblThueThuNhapCaNhan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh Sách Chuyên Môn</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Thuế TNCN</li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Chi tiết thông tin</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaThue" />
                    <div class="form-group">
                        <label class="control-label">Cơ quan quản lý</label>
                        <input asp-for="@Model.CoQuanQuanLyThue" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Lương</label>
                        <input asp-for="@Model.MaLuongNavigation.LuongCoBan" disabled class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Số tiền thuế</label>
                        <input asp-for="@Model.SoTien" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ngày đăng ký</label>
                        <input asp-for="@Model.NgayDangKi" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea disabled asp-for="@Model.GhiChu" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model.MaThue" class="btn btn-primary">Sửa Thông Tin</a>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>