@model DA_QLNhanSu.Models.TblThueThuNhapCaNhan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh Sách Chuyên Môn</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Thuế TNCN</li>
        <li class="breadcrumb-item active" aria-current="page">Sửa</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Sửa thông tin</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaThue" />
            <div class="form-group">
                <label asp-for="CoQuanQuanLyThue" class="control-label">Cơ quan quản lý</label>
                <input asp-for="CoQuanQuanLyThue" class="form-control" />
                <span asp-validation-for="CoQuanQuanLyThue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLuong" class="control-label">Lương</label>
                <select asp-for="MaLuong" class="form-control" asp-items="ViewBag.MaLuong"></select>
                <span asp-validation-for="MaLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTien" class="control-label">Số tiền thuế</label>
                <input asp-for="SoTien" class="form-control" />
                <span asp-validation-for="SoTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDangKi" class="control-label">Ngày đăng ký</label>
                <input asp-for="NgayDangKi" class="form-control" />
                <span asp-validation-for="NgayDangKi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                <textarea asp-for="GhiChu" class="form-control"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>

