@model IEnumerable<DA_QLNhanSu.Models.TblLuong>

@{
    ViewData["Title"] = "Bảng Lương";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh Sách Bậc Lương</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="./">Home</a></li>
        <li class="breadcrumb-item">Bảng Lương</li>
    </ol>
</div>

  <!-- Row -->
          <div class="row">
            <!-- Datatables -->
            <div class="col-lg-12">
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Lương thưởng</h6>
                    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
                </div>
                <div class="table-responsive p-3">
                  <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                      <tr>
                        <th>Trình độ</th>
                        <th>Đơn vị</th>
                        <th>Chuyên môn</th>
                        <th>Lương Cơ Bản</th>
                        <th>Thưởng</th>
                        <th>Ngày tạo</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Trình độ</th>
                        <th>Đơn vị</th>
                        <th>Chuyên môn</th>
                        <th>Lương Cơ Bản</th>
                        <th>Thưởng</th>
                        <th>Ngày tạo</th>
                        <th></th>
                      </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var item in Model) {
                      <tr>
                        <td>@item.MaTdNavigation.TenTrinhDo</td>
                        <td>@item.MaDvNavigation.TenDv</td>
                        <td>@item.MaCmNavigation.TenCm</td>
                        <td>@item.LuongCoBan</td>
                        <td>@item.LuongCbmoi</td>
                        <td>@item.NgayNhap</td>
                        <td>
                            @*<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaLuong">Sửa</a> |*@
                                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.MaLuong">Xem</a>
                        </td>
                      </tr>
                        }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
