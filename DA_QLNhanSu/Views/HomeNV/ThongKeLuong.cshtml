@model IEnumerable<DA_QLNhanSu.Models.TblThongKeLuong>
@{
    ViewData["Title"] = "ThongKeLuong";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bảng Thống Kê Lương</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Thống kê lương</li>
    </ol>
</div>

<!-- Row -->
<div class="row">
    <!-- Datatables -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Tháng</th>
                            <th>Tên NV</th>
                            <th>Lương Cơ Bản</th>
                            <th>Thuế</th>
                            <th>Thưởng</th>
                            <th>Tổng Thực Nhận</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaThangNavigation.TenThang</td>
                                <td>@item.MaNvNavigation.HoTen</td>
                                <td>@item.LuongCoBan</td>
                                <td>@item.ThuePhaiDong</td>
                                <td>@item.Thuong</td>
                                <td>@item.TongLuong</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="ThongKeLuongChiTiet" asp-route-id="@item.MaTkluong">Xem</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>