@model DA_QLNhanSu.Models.TblThongKeLuong
@{
    ViewData["Title"] = "ThongKeLuongChiTiet";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bảng Thống Kê Lương</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Thống kê lương</li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Xem thông tin lương @Model.MaThangNavigation.TenThang</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaTkluong" />
                    <div class="card-body row">
                        <div class="form-group col-lg-6">
                            <label class="control-label">Mã nhân viên</label>
                            <input asp-for="MaNvNavigation.HoTen" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">Tháng nhận lương</label>
                            <input asp-for="MaThangNavigation.TenThang" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">Tháng nhận lương</label>
                            <input asp-for="LuongCoBan" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">Thuế phải đóng</label>
                            <input asp-for="ThuePhaiDong" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="Thuong" class="control-label">Thưởng</label>
                            <input asp-for="Thuong" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">Tổng thực nhận</label>
                            <input asp-for="TongLuong" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">Ngày tạo</label>
                            <input asp-for="NgayTao" readonly class="form-control" />
                        </div>
                        <div class="form-group col-lg-12">
                            <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                            <textarea asp-for="GhiChu" readonly class="form-control"></textarea>
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <a asp-action="ThueCaNhan" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>