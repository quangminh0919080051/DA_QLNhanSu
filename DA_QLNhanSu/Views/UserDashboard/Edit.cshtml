@model DA_QLNhanSu.Models.TblTtnhanVien
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<title>@ViewData["Title"]</title>
<link href="~/assets/js/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/js/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/js/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/assets/css/ruang-admin.min.css" rel="stylesheet">
<script src="~/assets/js/vendor/jquery/jquery.min.js"></script>
<script src="~/assets/js/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/assets/js/ruang-admin.min.js"></script>
<script src="~/assets/js/vendor/datatables/jquery.dataTables.min.js"></script>
<div class="container p-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thông tin cá nhân</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Profile</li>
            <li class="breadcrumb-item">Sửa</li>
        </ol>
    </div>

    <div class="card mb-3">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h4 class="m-0 font-weight-bold text-primary">Sửa thông tin</h4>
        </div>
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body row">
                <input type="hidden" asp-for="MaNv" />
                <input type="hidden" asp-for="MaCm" />
                <input type="hidden" asp-for="MaTd" />
                <input type="hidden" asp-for="MaDv" />
                <input type="hidden" asp-for="MaThue" />
                <input type="hidden" asp-for="MaBhxh" />
                <input type="hidden" asp-for="MaLuong" />
                <input type="hidden" asp-for="Password" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="PhanQuyen" />
                <div class="form-group col-lg-12">
                    <label asp-for="ConvertPhoto" class="control-label">Ảnh</label>
                    <div class="text-center mb-2">
                        <img src="@Model.Anh" class="rounded" alt="@Model.HoTen" width="250">
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input asp-for="ConvertPhoto" class="custom-file-input">
                            <label asp-for="ConvertPhoto" class="custom-file-label">Choose file</label>
                        </div>
                    </div>
                    <span asp-validation-for="ConvertPhoto" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="HoTen" class="control-label">Họ tên</label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
                    <input asp-for="NgaySinh" type="date" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="GioiTinh" class="control-label">Giới tính</label>
                    <select asp-for="GioiTinh" class="form-control">
                        <option value="">--Chọn giới tính--</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Cmnd" class="control-label">Số CMND</label>
                    <input asp-for="Cmnd" class="form-control" />
                    <span asp-validation-for="Cmnd" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <label asp-for="NoiSinh" class="control-label">Nơi sinh</label>
                    <input asp-for="NoiSinh" class="form-control" />
                    <span asp-validation-for="NoiSinh" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Sdt" class="control-label">Điện thoại</label>
                    <input asp-for="Sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="DanToc" class="control-label">Dân tộc</label>
                    <input asp-for="DanToc" class="form-control" />
                    <span asp-validation-for="DanToc" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="TonGiao" class="control-label">Tôn giáo</label>
                    <input asp-for="TonGiao" class="form-control" />
                    <span asp-validation-for="TonGiao" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="QuocTich" class="control-label">Quốc tịch</label>
                    <input asp-for="QuocTich" class="form-control" />
                    <span asp-validation-for="QuocTich" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                    <textarea asp-for="GhiChu" class="form-control"></textarea>
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("Role") == 1 || HttpContextAccessor.HttpContext.Session.GetInt32("Role") == 2)
                    {
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay lại</a>
                    }
                    else
                    {
                        <a asp-action="ThueCaNhan" asp-controller="HomeNV" class="btn btn-secondary">Quay lại</a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

