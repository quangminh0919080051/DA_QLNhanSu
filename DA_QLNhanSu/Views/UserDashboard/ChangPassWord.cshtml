@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "ChangPassWord";
    Layout = null;
}
<title>@ViewData["Title"]</title>
<link href="~/assets/js/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/js/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/js/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/assets/css/ruang-admin.min.css" rel="stylesheet">
<script src="~/assets/js/vendor/jquery/jquery.min.js"></script>
<script src="~/assets/js/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/assets/js/ruang-admin.min.js"></script>
<script src="~/assets/js/vendor/datatables/jquery.dataTables.min.js"></script>
<div class="container p-4">
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh Sách Đơn Vị</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Đơn Vị</li>
        <li class="breadcrumb-item active" aria-current="page">Sửa</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Đổi mật khẩu</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <form method="post" asp-action="ChangPassWord" asp-controller="UserDashboard">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="oldPassword">Mật khẩu cũ:</label>
                        <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                        <span id="oldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="newPassword">Mật khẩu mới:</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword">
                        <span id="newPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="cfPassword">Xác nhận mật khẩu:</label>
                        <input type="password" class="form-control" id="cfPassword" name="cfPassword">
                        <span id="oldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("Role") == 1 || HttpContextAccessor.HttpContext.Session.GetInt32("Role") == 2)
                        {
                            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay lại</a>
                        }
                        else
                        {
                            <a asp-action="ThueCaNhan" asp-controller="HomeNV" class="btn btn-secondary">Quay lại</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
